{
  "manifest_version": 3,
  "name": "YouTube Speed Booster",
  "version": "1.5.0",
  "description": "Add 2x, 3x, 4x speed buttons and custom speed control to YouTube player. Enhance your video watching experience.",
  "author": "Pushpendra Sharma",
  "homepage_url": "https://github.com/pushpendra010/youtube-speed-extension",

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["src/content.js"],
      "css": ["src/style.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "permissions": ["activeTab", "contextMenus", "storage"],
  "host_permissions": ["*://www.youtube.com/*", "*://youtube.com/*"],

  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "action": {
    "default_title": "YouTube Speed Booster",
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },

  "background": {
    "service_worker": "src/background.js"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "pages/welcome.html",
        "pages/welcome.css",
        "pages/welcome.js",
        "pages/uninstall.html",
        "pages/uninstall.css",
        "pages/uninstall.js",
        "assets/icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "YouTube Speed Booster",
  "version": "1.0.0",
  "description": "Add 2x, 3x, 4x speed buttons and custom speed control to YouTube player. Enhance your video watching experience with quick speed adjustments.",
  "author": "Pushpendra Sharma",
  "homepage_url": "https://github.com/pushpendra010/youtube-speed-extension",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": ["activeTab", "contextMenus", "storage"],
  "host_permissions": ["*://www.youtube.com/*", "*://youtube.com/*"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "YouTube Speed Booster",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
